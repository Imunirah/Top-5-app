<h1>Top Five Breakfasts</h1>
<%= link_to "Add a Breakfast",  new_breakfast_path , { :class => "button waves-effect waves-light btn" } %>
<br><br>


<div class="row">
  <% @breakfasts.each do |breakfast| %>
  <div class="card" style="width: 18rem;"> 
  <div class="card-body"> 
    <%= image_tag(breakfast.img, size: "230x180", alt: "Resturant logo")%> 
    <h5 class="card-title">
     <p> </p>
     <%= link_to breakfast.name, breakfast_path(breakfast) %>
    </h5>
    <p class="card-text">
     Rate:<%= breakfast.rate%>
     <br>
     Location: <%= breakfast.location %> </p>
     <a class="btn btn-primary" href="<%= edit_breakfast_path(breakfast) %>">
      <i class="large material-icons">Edit</i>
      
      </a>
  
       <td><a class="btn btn-primary" data-confirm="Are you sure you want to delete <%= breakfast.name %>?" data-method="delete" href="/breakfasts/<%= breakfast.id %>" rel="nofollow"><i class="large material-icons">Delete</i>
      </a>
      </tr>
      </div>
      </div>

  <% end %>



