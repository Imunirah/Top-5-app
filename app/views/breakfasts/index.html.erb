<%# <h1>Breakfasts#index</h1>
<p>Find me in app/views/breakfasts/index.html.erb</p> %>
<h1>Top 5 Breakfasts</h1>


<table class="table table-striped">
  <tr>
    <th></th>
    <th>Resturant</th>
    <th>Rate</th>
    <th>Location</th>
 
  </tr>

  <% @breakfasts.each do |breakfast| %>
      <tr>
      <td><%= image_tag(breakfast.img, size: "150x110", alt: "Resturant logo") %></td>
        <td><%= link_to breakfast.name, breakfast_path(breakfast) %></td>
        <td><%= breakfast.rate%></td>
        <td><%= breakfast.location %></td>
      </tr>
  <% end %>
</table>