<center> <h1>Top Five Resturants</h1> </center>
<%= link_to "Add a Resturant ", new_resturant_path	 , { :class => "button waves-effect waves-light btn" } %>
<br><br>



<div class="row">
  <% @resturants.each do |resturant| %>
    <div class="col-md-3">
    <div class="card mb-4">
  <div class="card-body">
      <%= image_tag(resturant.img, width:"100%", height: "200" , alt: "Resturant logo")%>
      <h5 class="card-title">
     <p> </p>
        <%= link_to resturant.name, resturant_path(resturant) %>
        </h5>
        <p class="card-text">
      Rate:<%= resturant.rate%>
      <br>
      Location:<%= resturant.location %>
      <br>
      <a class="btn btn-primary" href="<%= edit_resturant_path(resturant) %>" >
      <i class="large material-icons">Edit</i>
      </a>

      <td><a class="btn btn-primary" data-confirm="Are you sure you want to delete <%= resturant.name %>?" data-method="delete" href="/resturants/<%= resturant.id %>" rel="nofollow"><i class="large material-icons">Delete </i>
      </a>
      </tr>
      </div>
      </div>
      </div>
  <% end %>
</div>
  
